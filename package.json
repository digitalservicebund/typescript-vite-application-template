{
  "name": "typescript-vite-application-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preserve": "vite build",
    "serve": "vite preview",
    "clean": "rm -rf dist/",
    "test": "jest test",
    "test:e2e": "playwright test --config=test/e2e/playwright.config.ts",
    "test:a11y": "playwright test --config=test/a11y/playwright.config.ts",
    "coverage": "jest test --coverage",
    "lint:check": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "audit:licences": "license-checker-rseidelsohn --production --excludePrivatePackages --onlyAllow ''",
    "check": "tsc --noEmit && npm run style:check && npm test && npm run test:e2e && npm run test:a11y"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.39.1",
    "axe-playwright": "^2.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-testing-library": "^7.15.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "playwright": "^1.54.2",
    "prettier": "3.7.3",
    "prettier-plugin-sh": "^0.18.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.3.0"
  },
  "engines": {
    "node": ">=22"
  }
}
